    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_weather">

    <fragment
        android:id="@+id/navigation_allday"
        android:name="tiseer.edu.weatherapp.ui.day.AllWeekFragment"
        android:label="Weekly weather"
        tools:layout="@layout/fragment_allweek" />

    <fragment
        android:id="@+id/navigation_weather"
        android:name="tiseer.edu.weatherapp.ui.weather.WeatherFragment"
        android:label="Weather"
        tools:layout="@layout/fragment_weather" />

    <fragment
        android:id="@+id/navigation_setting"
        android:name="tiseer.edu.weatherapp.ui.setting.SettingFragment"
        android:label="Setting"
        tools:layout="@layout/fragment_setting" />
